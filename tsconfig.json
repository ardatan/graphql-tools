{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["typings.d.ts"]
}
