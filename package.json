{
  "name": "graphql-tools-monorepo",
  "description": "Useful tools to create and manipulate GraphQL schemas.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardatan/graphql-tools.git"
  },
  "homepage": "https://github.com/ardatan/graphql-tools#readme",
  "bugs": {
    "url": "https://github.com/ardatan/graphql-tools/issues"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/loaders/*",
    "packages/executors/*",
    "website",
    "benchmark/*"
  ],
  "keywords": [
    "GraphQL",
    "Apollo",
    "JavaScript",
    "TypeScript",
    "Mock",
    "Schema",
    "Schema Language",
    "Tools"
  ],
  "scripts": {
    "build": "bob build",
    "build:api-docs": "ts-node --transpileOnly --compiler-options='{\"module\":\"commonjs\"}' scripts/build-api-docs",
    "ci:lint": "eslint --ext .ts . --output-file eslint_report.json --format json",
    "clean-dist": "rimraf \"packages/**/dist\" && rimraf \".bob\"",
    "lint": "eslint --ext .ts .",
    "postinstall": "patch-package && husky install",
    "prerelease": "yarn build",
    "prettier": "prettier --cache --ignore-path .prettierignore --write --list-different .",
    "prettier:check": "prettier --cache --ignore-path .prettierignore --check .",
    "release": "changeset publish",
    "test": "jest --no-watchman",
    "test:leaks": "jest --no-watchman --detectOpenHandles --detectLeaks --logHeapUsage",
    "ts:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-typescript": "7.23.3",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@theguild/prettier-config": "2.0.3",
    "@types/debug": "4.1.12",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.6",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "babel-jest": "29.7.0",
    "bob-the-bundler": "7.0.1",
    "chalk": "4.1.2",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "globby": "11.1.0",
    "graphql": "16.8.1",
    "graphql-subscriptions": "2.0.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "patch-package": "8.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.10",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typedoc": "0.25.6",
    "typedoc-plugin-markdown": "3.16.0",
    "typedoc-plugin-rename-defaults": "0.7.0",
    "typescript": "5.3.3",
    "weak-napi": "2.0.2"
  },
  "resolutions": {
    "esbuild": "^0.19.0",
    "graphql": "16.8.1"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "yarn": {
    "args": [
      "ignore-engines"
    ]
  }
}
