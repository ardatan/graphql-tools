{
  "name": "@graphql-tools/federation",
  "version": "0.0.2",
  "description": "Useful tools to create and manipulate GraphQL schemas.",
  "repository": {
    "type": "git",
    "url": "ardatan/graphql-tools",
    "directory": "packages/graphql-tools"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./*": {
      "require": {
        "types": "./dist/typings/*.d.cts",
        "default": "./dist/cjs/*.js"
      },
      "import": {
        "types": "./dist/typings/*.d.ts",
        "default": "./dist/esm/*.js"
      },
      "default": {
        "types": "./dist/typings/*.d.ts",
        "default": "./dist/esm/*.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "optionalDependencies": {
    "@apollo/client": "~3.2.5 || ~3.3.0 || ~3.4.0 || ~3.5.0 || ~3.6.0 || ~3.7.0"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "dependencies": {
    "@graphql-tools/delegate": "^9.0.35",
    "@graphql-tools/merge": "^8.3.16",
    "@graphql-tools/schema": "^9.0.14",
    "@graphql-tools/wrap": "^9.2.20",
    "@graphql-tools/utils": "^9.1.3",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-tools/stitch": "^8.7.49",
    "value-or-promise": "^1.0.12",
    "tslib": "^2.4.0"
  },
  "type": "module"
}
